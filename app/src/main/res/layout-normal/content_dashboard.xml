<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dashboard"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.petsapp.android.DashboardActivity">

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/articles_img_id"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/follow_img_id"
            android:layout_gravity="right|center_vertical"
            android:layout_x="222dp"
            android:layout_y="182dp"
            android:src="@drawable/happy_paws_icon" />

        <ImageView
            android:id="@+id/lostfound_img_id"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/articles_img_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|center_vertical"
            android:layout_x="2dp"
            android:layout_y="151dp"
            android:src="@drawable/lostfound1" />

        <ImageView
            android:id="@+id/mate_img_id"
            android:layout_width="210dp"
            android:layout_height="220dp"
            android:layout_x="54dp"
            android:layout_y="230dp"
            android:src="@drawable/mate1" />

        <ImageView
            android:id="@+id/follow_img_id"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:layout_above="@+id/mate_img_id"
            android:layout_gravity="right|top"
            android:layout_toEndOf="@+id/adoption_img_id"
            android:layout_toRightOf="@+id/adoption_img_id"
            android:layout_x="170dp"
            android:layout_y="79dp"
            android:src="@drawable/follow1" />

        <ImageView
            android:id="@+id/adoption_img_id"
            android:layout_width="136dp"
            android:layout_height="146dp"
            android:layout_above="@+id/mate_img_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|top"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="45dp"
            android:layout_x="71dp"
            android:layout_y="69dp"
            android:src="@drawable/adoption1" />

    </AbsoluteLayout>
</RelativeLayout>
