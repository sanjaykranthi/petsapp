<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.petsapp.android.UserProfileActivity"
    tools:showIn="@layout/activity_petprofilereg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4d4d4f"
            android:orientation="horizontal">

            <!-- <de.hdodenhof.circleimageview.CircleImageView
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:id="@+id/user_profile_img_id"
                 android:layout_width="96dp"
                 android:layout_height="96dp"
                 android:src="@drawable/petprofile"
                 app:civ_border_width="2dp"
                 app:civ_border_color="#ffffff" />-->
            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_profile_img_id"
                android:layout_width="390dp"
                android:layout_height="350dp"
                android:scaleType="fitXY"
                android:src="@drawable/petprofile" />

            <ImageView
                android:id="@+id/del_img_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="6dp"
                android:src="@drawable/delpet" />

            <ImageView
                android:id="@+id/intent_img_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_toLeftOf="@+id/del_img_id"
                android:padding="6dp"
                android:src="@drawable/intentimg" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/user_profile_img_id"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </RelativeLayout>

        <!--<View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/L1"
            android:layout_marginTop="1dp"
            android:background="@drawable/view_prof_line_dot"/>-->


        <!-- <TextView
             android:id="@+id/t1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Pet Profile"
             android:textColor="#d24c63"
             android:textSize="20sp"
             android:padding="4dp"
             android:layout_below="@+id/view1"
             />
 -->

        <LinearLayout
            android:id="@+id/L2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/L1">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/L2"
            android:layout_marginTop="7dp"
            android:background="@drawable/view_prof_line_dot" />

        <LinearLayout
            android:id="@+id/L3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/L2"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="pet name :"
                    android:textColor="#d24c63"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/petname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/L2"
                android:layout_marginTop="7dp"
                android:background="@drawable/view_prof_line_dot" />

            <LinearLayout
                android:id="@+id/L11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Breed       : "
                    android:textColor="#d24c63"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/petbreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/L2"
                android:layout_marginTop="7dp"
                android:background="@drawable/view_prof_line_dot" />

            <LinearLayout
                android:id="@+id/L12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Gender     :"
                    android:textColor="#d24c63"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/petgender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/L12"
                android:layout_marginTop="7dp"
                android:background="@drawable/view_prof_line_dot" />

            <LinearLayout
                android:id="@+id/L13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Pet Age    :"
                    android:textColor="#d24c63"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/petage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/L13"
                android:layout_marginTop="7dp"
                android:background="@drawable/view_prof_line_dot" />

            <LinearLayout
                android:id="@+id/L14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Height      :"
                    android:textColor="#d24c63"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/petheight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/L13"
                android:layout_marginTop="7dp"
                android:background="@drawable/view_prof_line_dot" />

            <LinearLayout
                android:id="@+id/L15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Weight      :"
                    android:textColor="#d24c63"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/petweight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/L13"
                android:layout_marginTop="7dp"
                android:background="@drawable/view_prof_line_dot" />

            <LinearLayout
                android:id="@+id/L16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Pet Size    :"
                    android:textColor="#d24c63"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/petsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="@drawable/view_prof_line_dot"
             android:layout_marginTop="7dp"/>
 -->

        <fragment
            android:id="@+id/map_pat_id"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/L3"
            android:layout_marginTop="7dp" />

    </RelativeLayout>
</ScrollView>
