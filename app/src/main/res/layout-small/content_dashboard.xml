<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dashboard"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.petsapp.android.DashboardActivity">

    <!-- <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">-->

    <ImageView
        android:id="@+id/articles_img_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/follow_img_id"
        android:layout_gravity="right|center_vertical"
        android:layout_x="125dp"
        android:layout_y="45dp"
        android:src="@drawable/happy_paws_icon" />

    <ImageView
        android:id="@+id/lostfound_img_id"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_x="8dp"
        android:layout_y="48dp"
        android:src="@drawable/lostfound1" />

    <ImageView
        android:id="@+id/mate_img_id"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_x="50dp"
        android:layout_y="76dp"
        android:src="@drawable/mate1" />

    <ImageView
        android:id="@+id/follow_img_id"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_x="85dp"
        android:layout_y="10dp"
        android:src="@drawable/follow1" />

    <ImageView
        android:id="@+id/adoption_img_id"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_above="@+id/mate_img_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|top"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="45dp"
        android:layout_x="39dp"
        android:layout_y="5dp"
        android:src="@drawable/adoption1" />

    <!-- </RelativeLayout>-->
</AbsoluteLayout>
